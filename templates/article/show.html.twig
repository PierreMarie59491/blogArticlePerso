{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Resumé</th>
                <td>{{ article.resume }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('images/articles/')}}{{ article.image }}" width="150" alt=""></td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_article_index') }}">Retour à la liste</a>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}">Modifier</a>

    {{ include('article/_delete_form.html.twig') }}

    {{ include('commentaire/_form.html.twig') }}

    <h4>Liste des commentaires</h4>

<h4>Commentaires</h4>
{% for commentaire in commentaires %}
<div class="commentaire">
  {{ commentaire.contenu}}
  <br>
Posté par {{commentaire.auteur}}, le {{ commentaire.createdAt ? commentaire.createdAt|date('d-m-Y H:i:s') : '' }}
</div>
<hr>
{% endfor %}
{% endblock %}
